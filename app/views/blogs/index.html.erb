<h1>ブログ一覧</h1>
<table>
  <tr>
    <th>タイトル</th>
    <th>コンテンツ</th>
  </tr>
  <% @blogs.each do |blog| %>
    <tr>
      <td><%= blog.title %></td>
      <td><%= blog.content %></td>
      <td><%= link_to '詳細確認', blog_path(blog.id) %></td>
      <td><%= link_to "編集", edit_blog_path(blog.id) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'ブログ投稿画面へ', new_blog_path %>